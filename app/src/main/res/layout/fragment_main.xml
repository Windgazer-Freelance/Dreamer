<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_borders"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    tools:context="com.android.fancyblurdemo.app.MainActivity$PlaceholderFragment">

    <com.android.fancyblurdemo.volley.toolbox.NetworkImageView
        android:id="@+id/flickrView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <com.android.fancyblurdemo.app.BlurImageView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <com.android.fancyblurdemo.app.RobotoTextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/title_text_background"
        android:paddingLeft="8dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="8dp"
        android:gravity="right"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        roboto:fontFace="light"/>

</RelativeLayout>
