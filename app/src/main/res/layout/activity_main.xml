<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:roboto="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.android.fancyblurdemo.app.MainActivity" >

    <com.android.fancyblurdemo.app.EdgeEffectViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.android.fancyblurdemo.app.RobotoTextView
        android:id="@+id/noConnectionView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/no_connection"
        android:textColor="@android:color/white"
        android:textSize="44sp"
        android:textAllCaps="true"
        android:gravity="center"
        roboto:fontFace="condensed"
        android:visibility="gone"/>

</FrameLayout>
